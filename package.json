{
  "name": "env-switcher",
  "displayName": "env switcher",
  "description": "Switch ENV in the status bar",
  "version": "0.3.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:envSwitcher.selectEnvironment"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "envSwitcher.selectEnvironment",
        "title": "Select Environment"
      }
    ],
    "configuration": {
      "title": "Environment Switcher",
      "properties": {
        "envSwitcher.options": {
          "type": "array",
          "default": [
            "int06",
            "int07",
            "int08"
          ],
          "description": "Available environment options"
        },
        "envSwitcher.targetSetting": {
          "type": "string",
          "default": "playwright.env.ENV",
          "description": "The configuration setting to be updated when switching environments"
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  }
}
